{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],

  "rebaseWhen": "never",
  "schedule": [
    "* 0 * * *"
  ],

  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": ["pin", "pinDigest"]
    },
    {
      "automerge": true,
      "groupName": "container-images",
      "matchUpdateTypes": ["digest"],
      "matchDepNames": [
        "docker.io/library/archlinux",
      ]
    }
  ]
}
